<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Tambahkan style ini di file styles.xml atau themes.xml Anda -->

    <!-- Style utama yang akan diterapkan pada MaterialCardView di layout -->
    <style name="CustomCardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.CardView.CustomCorners</item>
    </style>

    <!-- Style ini mendefinisikan bentuk sudutnya secara spesifik -->
    <style name="ShapeAppearanceOverlay.CardView.CustomCorners" parent="">
        <item name="cornerFamily">rounded</item>

        <!-- Atur radius untuk setiap sudut di sini -->
        <item name="cornerSizeTopLeft">50dp</item>
        <item name="cornerSizeTopRight">50dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <!-- ... Style dan tema Anda yang lain bisa diletakkan di sini ... -->

</resources>
